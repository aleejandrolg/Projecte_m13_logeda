        <activity android:name="alumne.vidalibarraquer.logopeda.mostrarActividad" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="alumne.vidalibarraquer.logopeda.lifecycle-process"
